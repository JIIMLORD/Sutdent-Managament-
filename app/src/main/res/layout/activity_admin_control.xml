<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ActivityAddStudent">

    <TextView
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#F8F5F5"
        android:text="Update Class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextSubjectClass"
        android:textColorHint="#F8F5F5"
        android:hint="Class"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextSubjectName"
        android:textColorHint="#F8F5F5"
        android:hint="Subject Name"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Teacher Name"
        android:id="@+id/EditTextTeacherName"
        android:layout_gravity="center"></EditText>



    <EditText
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextTeacherCode"
        android:textColorHint="#F8F5F5"
        android:hint="Teacher Code"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>



    <Button
        android:id="@+id/ButtonAddClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_button"
        android:text="ADD"
        android:textColor="#F8F5F5"></Button>
</LinearLayout>