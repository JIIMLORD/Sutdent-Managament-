<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#26292B"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Môn học"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:id="@+id/TextViewSubjectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Số tín chỉ: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/TextViewCredit"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/subjectinformation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:contentDescription="information"
        android:src="@drawable/baseline_subject_24"></ImageButton>

    <ImageButton
        android:id="@+id/subjectupdate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:contentDescription="update"
        android:src="@drawable/baseline_update_24"></ImageButton>

    <ImageButton
        android:id="@+id/subjectdelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:contentDescription="delete"
        android:src="@drawable/baseline_delete_24"></ImageButton>
</LinearLayout>