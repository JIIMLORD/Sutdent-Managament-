<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#26292B"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Tên học sinh"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:id="@+id/TextViewStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Ngày sinh: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/TextViewStudentCode"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="03/01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:src="@drawable/baseline_subject_24"
        android:layout_marginTop="25dp"
        android:id="@+id/studentinformation"
        android:contentDescription="information"
        android:layout_width="50dp"
        android:layout_height="50dp">
    </ImageButton>
    <ImageButton
        android:layout_marginLeft="5dp"
        android:src="@drawable/baseline_update_24"
        android:layout_marginTop="25dp"
        android:id="@+id/studentupdate"
        android:contentDescription="information"
        android:layout_width="50dp"
        android:layout_height="50dp">
    </ImageButton>
    <ImageButton
        android:layout_marginLeft="5dp"
        android:src="@drawable/baseline_delete_24"
        android:layout_marginTop="25dp"
        android:id="@+id/studentdelete"
        android:contentDescription="information"
        android:layout_width="50dp"
        android:layout_height="50dp">
    </ImageButton>
</LinearLayout>